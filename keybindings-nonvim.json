[
  // ! Terminal Navigation
  {
    "key": "alt+j o",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "alt+j n",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "alt+j p",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "alt+j a",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "alt+j q",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  {
    "key": "alt+j l",
    "command": "workbench.action.terminal.focusNextPane"
  },
  // ! Sidebar Navigation
  {
    "key": "alt+e o",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "alt+e e",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "alt+e x",
    "command": "workbench.extensions.action.focusExtensionsView"
  },
  {
    "key": "alt+e g",
    "command": "workbench.scm.action.focusNextResourceGroup"
  },
  {
    "key": "alt+e t",
    "command": "thunder-client-sidebar.focus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "deleteFile",
    "key": "d",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "g y",
    "command": "copyFilePath",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "Y",
    "command": "copyRelativeFilePath",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // ! File Navigation
  {
    "key": "alt+o f",
    "command": "workbench.action.quickOpen",
  },
  {
    "key": "alt+o d",
    "command": "workbench.action.files.openFileFolder",
  },
  {
    "key": "alt+o n",
    "command": "workbench.action.files.newUntitledFile",
  },
  // ! Swap Tabs that arent files using the same keybinds that files use
  {
    "key": "alt+l",
    "command": "workbench.action.nextEditor",
  },
  {
    "key": "alt+h",
    "command": "workbench.action.previousEditor",
  },
  {
    "key": "ctrl+pagedown",
    "command": "-workbench.action.nextEditor"
  },
  {
    "key": "ctrl+pageup",
    "command": "-workbench.action.previousEditor"
  },
  // ! Stop making new files / windows from a keybind
  {
    "key": "ctrl+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "ctrl+shift+n",
    "command": "-workbench.action.newWindow"
  },
  // ! Close window using similar keybind as the vim motion
  {
    "key": "alt+q",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "alt+/",
    "command": "fuzzySearch.activeTextEditor"
  },
]
